@model InventoryManagementSystem.EntitiesLayer.Models.Category

@{
    ViewData["Title"] = "Category Details"; Layout = "_InventoryLayout";

}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<h1>@Model.Name</h1>
<p>@Model.Description</p>



<h2>Products in this Category</h2>
@if (Model.Products != null && Model.Products.Any())
{
    <ul class="list-group">
        @foreach (var product in Model.Products)
        {
            <li class="list-group-item">
                <strong>@product.ProductName</strong> - Price: @product.Price 
            </li>
        }
    </ul>
}
else
{
    <p>No products found in this category.</p>
}

<a asp-action="Index" asp-controller="Category" class="btn btn-primary">Back to Categories</a>
