@model IEnumerable<Supplier>

@{
    ViewData["Title"] = "Index";
    Layout = "_InventoryLayout";
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Arial, sans-serif;
    }

    body {
        display: flex;
        height: 100vh;
        width: 100%;
        overflow: hidden;
    }

    .container {
        display: flex;
        width: 100%;
        flex-direction: column;
    }

    .main-container {
        width: 100%;
        margin: 0 auto;
        margin-top: 50px;
        font-family: Arial, sans-serif;
    }

    .header-section {
        background-color: #4a4a4a;
        color: white;
        padding: 20px;
        text-align: center;
        border-radius: 8px;
    }

    .header-section h1 {
        margin: 0;
        font-size: 2.2em;
        font-weight: bold;
    }

    .button-container {
        text-align: right;
        margin-bottom: 20px;
    }

    .button-add {
        background-color: #28a745;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        font-size: 1em;
        cursor: pointer;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

    .button-add:hover {
        background-color: #218838;
    }

    .table-wrapper {
        width: 100%;
        margin-top: 20px;
        background-color: #f1f1f1;
        padding: 15px;
        border-radius: 10px;
        box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
        overflow-x: auto; /* يسمح بالتمرير الأفقي عند الحاجة */
    }

    table {
        width: 100%;
        border-collapse: collapse;
        text-align: left;
        margin-bottom: 20px;
    }

    table thead {
        background-color: #007bff;
        color: white;
    }

    table th, table td {
        padding: 12px 15px;
        border: 1px solid #ccc;
    }

    table tbody tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    table tbody tr:hover {
        background-color: #e9e9e9;
    }

    .button-action {
        padding: 8px 12px;
        font-size: 0.9em;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
        transition: background-color 0.3s ease;
    }

    .button-view {
        background-color: #17a2b8;
        color: white;
    }

    .button-view:hover {
        background-color: #138496;
    }

    .button-edit {
        background-color: #ffc107;
        color: white;
    }

    .button-edit:hover {
        background-color: #e0a800;
    }

    .button-delete {
        background-color: #dc3545;
        color: white;
    }

    .button-delete:hover {
        background-color: #c82333;
    }

    .no-data-alert {
        background-color: #ffeeba;
        color: #856404;
        padding: 20px;
        border: 1px solid #ffeeba;
        text-align: center;
        font-size: 1.3em;
        margin-top: 50px;
        border-radius: 10px;
    }

    .no-data-alert h3 {
        margin: 0;
    }

    /* Media Queries لتصميم استجابة */
    @@media (max-width: 768px) {
        .header-section h1 {
            font-size: 1.5em; /* تقليل حجم الخط في الشاشات الصغيرة */
        }

        .button-container {
            text-align: center; /* محاذاة الأزرار إلى المركز */
            margin-bottom: 10px;
        }

        table th, table td {
            padding: 8px; /* تقليل الحشو في الخلايا */
        }

        table {
            font-size: 0.9em; /* تقليل حجم الخط في الجدول */
        }
    }
</style>

<div class="container">
    <div class="main-container">
        <div class="header-section">
            <h1>All Suppliers</h1>
        </div>

        <div class="button-container">
            <a asp-controller="Supplier" asp-action="Create" class="button-add">
                <i class="fas fa-plus"></i> Create New Supplier
            </a>
        </div>

        @if (Model.Any())
        {
            <div class="table-wrapper">
                <table>
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(p => p.Name)</th>
                            <th>@Html.DisplayNameFor(p => p.ContactName)</th>
                            <th>@Html.DisplayNameFor(p => p.phone)</th>
                            <th>@Html.DisplayNameFor(p => p.Email)</th>
                            <th class="text-center">Details</th>
                            <th class="text-center">Update</th>
                            <th class="text-center">Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var supplier in Model)
                        {
                            <tr>
                                <td>@supplier?.Name</td>
                                <td>@supplier?.ContactName</td>
                                <td>@supplier?.phone</td>
                                <td>@supplier?.Email</td>
                                <td class="text-center">
                                    <a asp-controller="Supplier" asp-action="Details" asp-route-id="@supplier?.Id" class="button-action button-view">
                                        <i class="fas fa-eye"></i> Details
                                    </a>
                                </td>
                                <td class="text-center">
                                    <a asp-controller="Supplier" asp-action="Edit" asp-route-id="@supplier?.Id" class="button-action button-edit">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                </td>
                                <td class="text-center">
                                    <a asp-controller="Supplier" asp-action="Delete" asp-route-id="@supplier?.Id" class="button-action button-delete">
                                        <i class="fas fa-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="no-data-alert">
                <h3>There are no Suppliers Info available.</h3>
            </div>
        }
    </div>
</div>
