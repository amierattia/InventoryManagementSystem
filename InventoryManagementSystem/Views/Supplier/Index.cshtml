@model IEnumerable<Supplier>

@{
    ViewData["Title"] = "Index";
  
}

<div class="container mt-5">
    <h1 class="text-center mb-4">All Suppliers</h1>

    <div class="d-flex justify-content-end mb-4">
        <a asp-controller="Supplier" asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create New Supplier
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="thead-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(p => p.Name)</th>
                        <th>@Html.DisplayNameFor(p => p.ContactName)</th>
                        <th>@Html.DisplayNameFor(p => p.phone)</th>
                        <th>@Html.DisplayNameFor(p => p.Email)</th>
                        <th class="text-center">Details</th>
                        <th class="text-center">Update</th>
                        <th class="text-center">Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var supplier in Model)
                    {
                        <tr>
                            <td>@supplier?.Name</td>
                            <td>@supplier?.ContactName</td>
                            <td>@supplier?.phone</td>
                            <td>@supplier?.Email</td>
                            <td class="text-center">
                                <a asp-controller="Supplier" asp-action="Details" asp-route-id="@supplier?.Id" class="btn btn-info btn-sm">
                                    <i class="fas fa-eye"></i> Details
                                </a>
                            </td>
                            <td class="text-center">
                                <a asp-controller="Supplier" asp-action="Edit" asp-route-id="@supplier?.Id" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                            </td>
                            <td class="text-center">
                                <a asp-controller="Supplier" asp-action="Delete" asp-route-id="@supplier?.Id" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center mt-5">
            <h3>There are no Suppliers Info available.</h3>
        </div>
    }
</div>
