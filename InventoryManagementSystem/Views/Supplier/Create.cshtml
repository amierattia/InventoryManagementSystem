@model Supplier
@{

    ViewData["Title"] = "Create";
    Layout = "_InventoryLayout";

}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />


<h1>Add new Supplier</h1>
<br />
<br />

<form asp-controller="Supplier" asp-action="Create" method="post">


    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="ContactName"></label>
        <input asp-for="ContactName" class="form-control" />
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="phone"></label>
        <input asp-for="phone" class="form-control" />
    </div>

   

    <input type="submit" value="Create" class="btn btn-primary mt-3"  />
    <a asp-controller="Supplier" asp-action="Index" class="btn btn-light" >Back to list</a>

</form>
