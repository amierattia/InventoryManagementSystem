@model Supplier
@{
    ViewData["Title"] = "Delete"; 
}
<div class="container mt-5">
    <div class="card p-4 shadow-lg">
        <h1 class="alert alert-warning text-center">Are You Sure You Want to Delete This Product?</h1>


        <form asp-action="Delete" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" class="form-control" readonly />
            </div>

            <div class="form-group mb-3">
                <label asp-for="ContactName" class="form-label">Contact Name</label>
                <input asp-for="ContactName" class="form-control" readonly />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <textarea asp-for="Email" class="form-control" rows="3" readonly></textarea>
            </div>


            <div class="form-group mb-3">
                <label asp-for="phone" class="form-label">Phone</label>
                <input asp-for="phone" class="form-control" readonly />
            </div>


           
            <div class="d-flex justify-content-between mt-4">
                <button type="submit" value="Delete" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>

        </form>
    </div>
</div>
