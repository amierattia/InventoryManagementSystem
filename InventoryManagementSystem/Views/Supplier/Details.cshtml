 @model Supplier

@{
  
    ViewData["Title"] = "Details";
    
}

<div class="container mt-5">
    <div class="card p-4 shadow-lg">
        <h1 class="text-center mb-4">Product Details</h1>

        <div class="form-group mb-3">
            <label asp-for="Name" class="form-label">Supplier Name</label>
            <input asp-for="Name" class="form-control" readonly />
        </div>

        <div class="form-group mb-3">
            <label asp-for="ContactName" class="form-label">Contact Name</label>
            <input asp-for="ContactName" class="form-control" readonly />
        </div>

        <div class="form-group mb-3">
            <label asp-for="phone" class="form-label">phone</label>
            <input asp-for="phone" class="form-control" readonly />
        </div>

        <div class="form-group mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <textarea asp-for="Email" class="form-control" rows="3" readonly></textarea>
        </div>



        <div class="d-flex justify-content-between mt-4">
            <a asp-controller="Supplier" asp-action="Edit" class="btn btn-success" asp-route-id="@Model.Id">Edit</a>
            <a  asp-action= "Index" class="btn btn-secondary">Back To List</a>
        </div>
    </div>
</div>
