@using InventoryManagementSystem.BLL.Dto;
@model ChangePasswordDto

@{
    ViewBag.Title = "Change Password";
    ViewBag.Title = "Change Password";
    Layout = "_AccountLayout";
}

<div class="d-flex justify-content-center align-items-center min-vh-100 bg-light">
    <div class="account-box shadow-lg p-4 rounded bg-white">
        <h2 class="text-center mb-4 text-primary">Change Your Password</h2>
        <form asp-action="ChangePassword" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <!-- Email (Read-only) -->
            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-bold">Email</label>
                <input asp-for="Email" class="form-control border-primary" readonly />
            </div>

            <!-- New Password -->
            <div class="mb-3">
                <label asp-for="NewPassword" class="form-label fw-bold">New Password</label>
                <input asp-for="NewPassword" type="password" class="form-control border-primary" placeholder="Enter new password" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <!-- Confirm New Password -->
            <div class="mb-3">
                <label asp-for="ConfirmNewPassword" class="form-label fw-bold">Confirm New Password</label>
                <input asp-for="ConfirmNewPassword" type="password" class="form-control border-primary" placeholder="Confirm new password" />
                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <input type="submit" value="Submit" class="btn btn-primary w-100 p-2" />

            <!-- Back Link -->
            <div class="text-center mt-3">
                <a asp-controller="Account" asp-action="VerifyEmail" class="text-decoration-none">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}