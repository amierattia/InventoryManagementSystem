@using InventoryManagementSystem.BLL.Dto
@model UserDto
<style>

    .card {
        border-radius: 1rem; /* Rounded corners for the card */
    }

    .card-header {
        border-radius: 1rem 1rem 0 0; /* Round top corners only */
    }

    .btn-primary {
        transition: background-color 0.3s ease, transform 0.3s ease; /* Smooth hover effects */
    }

        .btn-primary:hover {
            background-color: #0056b3; /* Darker shade on hover */
            transform: translateY(-2px); /* Slight lift effect */
        }

    .form-control-plaintext {
        padding: 0.5rem; /* Padding for better spacing */
        border: 1px solid #dee2e6; /* Subtle border for clarity */
        border-radius: 0.25rem; /* Rounded corners for plain text */
        background-color: #fff; /* White background for readability */
    }
</style>
@if (Model != null)
{
    <div class="container mt-5">
        <h2 class="text-center mb-4">@ViewData["Title"]</h2>
        <div class="card shadow-sm border-0 rounded">
            <div class="card-header bg-primary text-white text-center">
                <h4>User Information</h4>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="font-weight-bold">Name:</label>
                    <p class="form-control-plaintext">@Model.Name</p>
                </div>

                <div class="mb-3">
                    <label class="font-weight-bold">Email:</label>
                    <p class="form-control-plaintext">@Model.Email</p>
                </div>

                <div class="text-center">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg">Back to Users List</a>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning mt-3 text-center">
        User information is not available.
    </div>
}
