@using InventoryManagementSystem.BLL.Dto
@model UserDto
@{
    Layout = "_InventoryLayout";
}

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

     
        .profile-container {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
        }

        .profile-card {
            background-color: #ffffff; /* White background for card */
            padding: 40px 30px;
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1); /* Lighter shadow */
            width: 320px;
            text-align: center;
            color: #212529; /* Dark text */
        }

        .profile-image-section {
            display: flex;
            justify-content: center;
        }

        .profile-image {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            border: 4px solid #0d6efd; /* Primary color border */
        }

        .profile-name {
            font-size: 24px;
            margin-top: 15px;
            font-weight: bold;
            color: #212529; /* Dark text */
        }

        .profile-detail {
            font-size: 14px;
            color: #6c757d; /* Muted text */
            margin-top: 5px;
        }

        .profile-actions {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }

        a {
            text-decoration: none;
        }

        .btn {
            width: 48%;
            padding: 10px;
            font-size: 14px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background 0.3s ease;
        }

        .btn-message {
            background-color: #0d6efd; /* Primary button color */
            color: #fff;
        }

            .btn-message:hover {
                background-color: #0a58ca; /* Darker primary on hover */
            }

        .btn-follow {
            background-color: #6c757d; /* Secondary button color */
            color: #fff;
        }

            .btn-follow:hover {
                background-color: #5a6268; /* Darker secondary on hover */
            }

        .skills-section {
            margin-top: 30px;
            text-align: left;
        }

            .skills-section h4 {
                color: #6c757d; /* Muted heading */
                margin-bottom: 10px;
                font-size: 16px;
            }

        .skills {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            justify-content: center;
        }

        .skill {
            background-color: #e9ecef; /* Light skill tag background */
            padding: 8px 12px;
            border-radius: 5px;
            color: #212529; /* Dark text */
            font-size: 14px;
        }

    </style>

    <div class="profile-container">
        <div class="profile-card">
            <div class="profile-image-section">
                <img src="~/images/@Model.ProfilePicture" alt="Profile Picture" class="profile-image" />
            </div>

            <div class="profile-name">@Model.Name</div>
           

            <div class="profile-actions">
                <a class="btn btn-message" href="@Url.Action("ChangePassword", "Account")">Change Password</a>
                <a href="@Url.Action("EditProfile", "Account")" class="btn btn-follow">Edit Profile</a>
            </div>

            <div class="skills-section">
                <div class="skills">
                    <div class="profile-detail">Email: @Model.Email</div>
                    <div class="profile-detail">Phone: @Model.Phone</div>
                </div>
            </div>
        </div>
    </div>

