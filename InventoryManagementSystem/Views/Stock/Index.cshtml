@model IEnumerable<InventoryManagementSystem.EntitiesLayer.Models.Product>

@{
    ViewData["Title"] = "Low Stock Products";
    Layout = "_InventoryLayout";

}


<style>
  

    h2 {
        color: #2c3e50;
        font-size: 1.8rem;
        margin-bottom: 20px;
    }

    p {
        font-size: 1.2rem;
        color: #7f8c8d;
    }

    /* Table Styling */
    .table {
        width: 100%;
        max-width: 100%;
        margin-bottom: 20px;
        border-collapse: collapse;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
    }

    .table th,
    .table td {
        padding: 12px 20px;
        text-align: left;
        font-size: 1rem;
        color: #34495e;
    }

    .table th {
        background-color: #f9fafb;
        color: #7f8c8d;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        border-bottom: 2px solid #ecf0f1;
    }

    .table tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    .table td {
        border-bottom: 1px solid #ecf0f1;
    }

    /* Empty State Styling */
    .empty-state {
        font-size: 1.3rem;
        color: #e74c3c;
        text-align: center;
        padding: 30px;
        background-color: #fff3f3;
        border: 1px solid #f5c6cb;
        border-radius: 12px;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .table th, .table td {
            padding: 10px;
            font-size: 0.9rem;
        }

        h2 {
            font-size: 1.5rem;
        }

        p {
            font-size: 1.1rem;
        }
    }
</style>


<h2>Low Stock Products</h2>

@if (!Model.Any())
{
    <p>No products with low stock.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Stock Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.stockQuantity</td>
                </tr>
            }
        </tbody>
    </table>
}
