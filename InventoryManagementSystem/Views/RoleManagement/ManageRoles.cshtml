@using InventoryManagementSystem.BLL.Dto
@model UserRolesDto

@{
    ViewData["Title"] = "Manage User Roles";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Manage Roles for @Model.UserName</h2>

    <div class="card">
        <div class="card-body">
            <form method="post">
                <input type="hidden" name="UserId" asp-for="UserId" />
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Role</th>
                            <th>Assigned</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Roles.Count; i++)
                        {
                            <tr>
                                <td>
                                    <input type="hidden" asp-for="@Model.Roles[i].RoleName" />
                                    <span class="font-weight-bold">@Model.Roles[i].RoleName</span>
                                </td>
                                <td>
                                    <div class="form-check">
                                        <input type="checkbox" asp-for="@Model.Roles[i].IsSelected" class="form-check-input" id="role_@i" />
                                        <label class="form-check-label" for="role_@i">@Model.Roles[i].RoleName</label>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="text-center mb-4">
                    <button type="submit" class="btn btn-primary btn-lg">Update Roles</button>
                </div>
            </form>
        </div>
    </div>
</div>
