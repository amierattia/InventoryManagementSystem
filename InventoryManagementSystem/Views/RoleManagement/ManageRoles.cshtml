@using InventoryManagementSystem.BLL.Dto
@model UserRolesDto

@{
    ViewData["Title"] = "Manage User Roles";
    Layout = "_InventoryLayout";


    Layout = "_InventoryLayout"; 


}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<style>



    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Arial, sans-serif;
    }

    body {
        display: flex;
        height: 100vh;
        width: 100%;
        overflow: hidden;
    .main-content{
        margin-left:100px;
    }

    .container {
        display: flex;
        width: 100%;
        flex-direction: column;
    }



    }

    .card {
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin-top: 20px;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f5f9;
    }

    .btn-primary {
        background-color: #10b981;
        border-color: #10b981;
        padding: 10px 15px;
        font-size: 1em;
        border-radius: 5px;
    }

        .btn-primary:hover {
            background-color: #4b5563;
            border-color: #4b5563;
        }

</style>


<!-- Main Content -->
<div class="container">
    <h2 class="text-center mb-4">Manage Roles for @Model.UserName</h2>
   

    <div class="card">
        <div class="card-body">
            <form method="post">
                <input type="hidden" name="UserId" asp-for="UserId" />
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Role</th>
                            <th>Assigned</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Roles.Count; i++)
                        {
                            <tr>
                                <td>
                                    <input type="hidden" asp-for="@Model.Roles[i].RoleName" />
                                    <span class="font-weight-bold">@Model.Roles[i].RoleName</span>
                                </td>
                                <td>
                                    <div class="form-check">
                                        <input type="checkbox" asp-for="@Model.Roles[i].IsSelected" class="form-check-input" id="role_@i" />
                                        <label class="form-check-label" for="role_@i">@Model.Roles[i].RoleName</label>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="text-center mb-4">
                    <button type="submit" class="btn btn-primary btn-lg">Update Roles</button>
                </div>
            </form>
        </div>
    </div>
</div>
    </div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
