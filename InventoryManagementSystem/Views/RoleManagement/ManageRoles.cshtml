@using InventoryManagementSystem.BLL.Dto
@model UserRolesDto

@{
    ViewData["Title"] = "Manage User Roles";
    Layout = "_InventoryLayout";
}

<!-- Modern CSS -->
<style>
  

    /* Container */
    .container {
        max-width: 900px;
        width: 100%;
        padding: 20px;
        margin: auto;
    }

    /* Main Content */
    .main-content {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        margin-left: 100px;
    }

    /* Card */
    .card {
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        padding: 30px;
        margin-top: 20px;
        width: 100%;
    }

    /* Modern Table */
    .table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
        background-color: #ffffff;
    }

        .table th, .table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #e5e7eb;
        }

        .table thead th {
            background-color: #f3f4f6;
            color: #111827;
            font-weight: 600;
        }

    .table-hover tbody tr:hover {
        background-color: #f9fafb;
        transition: background-color 0.3s ease-in-out;
    }

    /* Button Styling */
    .btn-primary {
        background-color: #1d4ed8;
        border: none;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 1em;
        transition: background-color 0.3s ease-in-out;
    }

        .btn-primary:hover {
            background-color: #2563eb;
        }

    /* Checkbox Styling */
    .form-check-input {
        width: 18px;
        height: 18px;
        margin-right: 10px;
    }

    .form-check-label {
        font-weight: 500;
        color: #374151;
    }

    /* Heading */
    .text-center {
        text-align: center;
        margin-bottom: 20px;
        font-size: 1.75rem;
        color: #1f2937;
    }

    /* Center alignment for button */
    .btn-container {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }

</style>

<!-- Main Content -->
<div class="container">
    <h2 class="text-center mb-4">Manage Roles for @Model.UserName</h2>

    <div class="card">
        <div class="card-body">
            <form method="post">
                <input type="hidden" name="UserId" asp-for="UserId" />
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Role</th>
                            <th>Assigned</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Roles.Count; i++)
                        {
                            <tr>
                                <td>
                                    <input type="hidden" asp-for="@Model.Roles[i].RoleName" />
                                    <span class="font-weight-bold">@Model.Roles[i].RoleName</span>
                                </td>
                                <td>
                                    <div class="form-check">
                                        <input type="checkbox" asp-for="@Model.Roles[i].IsSelected" class="form-check-input" id="role_@i" />
                                        <label class="form-check-label" for="role_@i">@Model.Roles[i].RoleName</label>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="btn-container">
                    <button type="submit" class="btn-primary">Update Roles</button>
                </div>
            </form>
        </div>
    </div>
</div>
