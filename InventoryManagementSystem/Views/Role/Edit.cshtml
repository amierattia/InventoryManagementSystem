@using InventoryManagementSystem.BLL.Dto
@model CreateRoleDto

@{
    ViewData["Title"] = "Edit Role";
    Layout = "_InventoryLayout";
}

<div class="container">
    <div class="card">
        <div class="card-header">
            <h3>Edit Role</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post" novalidate>
                <div class="form-group">
                    <label for="roleName">Role Name</label>
                    <input asp-for="Name" id="roleName" class="input" placeholder="Enter role name" required />
                    <div class="error-message">Role name is required.</div>
                </div>

                <div class="button-group">
                    <button type="submit" class="button primary">Save</button>
                    <a asp-action="Index" class="button secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Custom CSS -->
<style>
    body {
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 600px;
        margin: 50px auto;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .card-header {
        background-color: #007bff;
        color: white;
        padding: 15px;
        text-align: center;
    }

        .card-header h3 {
            margin: 0;
            font-size: 24px;
        }

    .card-body {
        padding: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        display: block;
        margin-bottom: 8px;
        font-weight: bold;
        color: #333;
    }

    .input {
        width: 100%;
        padding: 10px;
        font-size: 14px;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-sizing: border-box;
    }

        .input:focus {
            border-color: #007bff;
            outline: none;
        }

    .error-message {
        color: #e74c3c;
        font-size: 12px;
        margin-top: 5px;
    }

    .button-group {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .button {
        padding: 10px 20px;
        font-size: 16px;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s;
        cursor: pointer;
        text-align: center;
    }

        .button.primary {
            background-color: #007bff;
            color: white;
            border: none;
        }

            .button.primary:hover {
                background-color: #0056b3;
            }

        .button.secondary {
            background-color: #ccc;
            color: #333;
            border: none;
        }

            .button.secondary:hover {
                background-color: #aaa;
            }

    @@media (max-width: 768px) {
        .container {
            max-width: 90%;
            padding: 15px;
        }

        .button-group {
            flex-direction: column;
            gap: 10px;
        }

        .button {
            width: 100%;
            text-align: center;
        }

        .input {
            font-size: 16px;
            padding: 12px;
        }
    }

    @@media (max-width: 480px) {
        .card-header, .card-body {
            padding: 10px;
        }

        .button {
            font-size: 14px;
            padding: 8px 12px;
        }

        .input {
            font-size: 14px;
            padding: 8px;
        }

        h3, h5 {
            font-size: 18px;
        }
    }
</style>
