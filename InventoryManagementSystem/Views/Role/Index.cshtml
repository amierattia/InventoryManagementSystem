@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    Layout = "_InventoryLayout";
}

<h2>Role Management</h2>

<div class="container">
    <div class="table-container">
        <table class="styled-table">
            <thead>
                <tr>
                    <th>Role Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model)
                {
                    <tr>
                        <td>@role.Name</td>
                        <td class="action-btns">
                            <a href="@Url.Action("Edit", new { id = role.Id })" class="btn btn-primary">Edit</a>
                            <a href="@Url.Action("Delete", new { id = role.Id })" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <a href="/Role/Create" class="btn btn-success add-role-btn">Add Role</a>
    </div>
</div>

<style>
    h2 {
        margin-bottom: 30px;
        color: #000;
        font-weight: 600;
        text-align: center;
    }

    body {
        font-family: 'Arial', sans-serif;
        background-color: #eeeeee;
        margin: 0;
        padding: 0;
    }

    .container {
        display: flex;
        justify-content: center;
        flex-direction: column;
        padding: 20px;
        max-width: 100%;
    }

    .table-container {
        background-color: #fff;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
        width: 100%;
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
    }

    .styled-table {
        width: 100%;
        border-collapse: collapse;
        overflow-x: auto;
    }

    .styled-table thead tr {
        background-color: #3C91E6;
        color: white;
    }

    .styled-table th, .styled-table td {
        padding: 12px 15px;
        text-align: center;
        border: 1px solid #ddd;
    }

    .styled-table tbody tr {
        background-color: #f9f9f9;
    }

    .styled-table tbody tr:nth-of-type(even) {
        background-color: #f3f3f3;
    }

    .styled-table tbody tr:hover {
        background-color: #f1f1f1;
    }

    .action-btns {
        display: flex;
        justify-content: center;
        gap: 10px;
    }

    .btn {
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        font-size: 0.9rem;
        cursor: pointer;
        transition: transform 0.2s;
        color: white;
        border: none;
        font-weight: 500;
    }

    .btn-primary {
        background-color: #007bff;
    }

    .btn-danger {
        background-color: #dc3545;
    }

    .btn-success {
        background-color: #28a745;
        margin-top: 20px;
        display: inline-block;
    }

    .btn:hover {
        transform: scale(1.05);
    }

    .btn-success:hover {
        background-color: #218838;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .btn-danger:hover {
        background-color: #c82333;
    }

    .add-role-btn {
        padding: 12px 25px;
        font-size: 1rem;
        text-align: center;
        display: block;
        margin: 20px auto 0;
        max-width: 150px;
    }

    /* Responsive Styles */
    @@media (max-width: 768px) {
        .container {
            padding: 10px;
            width: 95%;
        }

        .table-container {
            padding: 10px;
        }

        .styled-table th, .styled-table td {
            font-size: 0.9rem;
            padding: 8px 10px;
        }

        .action-btns {
            flex-direction: column;
        }

        .btn {
            font-size: 0.8rem;
            width: 100%;
            margin-bottom: 10px;
        }

        .add-role-btn {
            width: 100%;
        }
    }

    @@media (max-width: 480px) {
        h2 {
            font-size: 1.5rem;
        }

        .container {
            padding: 5px;
        }

        .table-container {
            width: 100%;
        }

        .styled-table th, .styled-table td {
            font-size: 0.8rem;
            padding: 6px 8px;
        }

        .btn {
            font-size: 0.7rem;
            padding: 8px;
        }
    }
</style>
