@model Microsoft.AspNetCore.Identity.IdentityRole

@{
    ViewData["Title"] = "Delete Role";
    Layout = "_InventoryLayout";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<div class="container mt-5">
    <div style=" height:400px" class="card shadow-sm border-0">
        <div class="card-header bg-danger text-white">
            <h3 class="card-title mb-0">Delete Role</h3>
        </div>
        <div class="card-body">
            <p class="lead">Are you sure you want to delete this role?</p>
            <div class="alert alert-warning">
                <h5 class="alert-heading">Role Name: @Model.Name</h5>
            </div>

            <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-danger px-4">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
