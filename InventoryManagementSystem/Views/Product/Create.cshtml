@model Product
@{
    Layout = "_InventoryLayout";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<div class="container">
    <form asp-action="Create" method="post" class="bg-white p-4 rounded shadow-sm">
        <h2 class="mb-4 text-2xl text-gray-800">Add New Product</h2>

        <!-- Product Name -->
        <div class="form-group mb-3">
            <label asp-for="ProductName" class="form-label text-gray-700"></label>
            <input asp-for="ProductName" class="form-control border border-gray-300 focus:border-[#10b981] focus:ring focus:ring-[#10b981] placeholder-gray-400" placeholder="Enter product name" required />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>

        <!-- Product Description -->
        <div class="form-group mb-3">
            <label asp-for="ProductDescription" class="form-label text-gray-700"></label>
            <textarea asp-for="ProductDescription" class="form-control border border-gray-300 focus:border-[#10b981] focus:ring focus:ring-[#10b981] placeholder-gray-400" placeholder="Enter product description"></textarea>
            <span asp-validation-for="ProductDescription" class="text-danger"></span>
        </div>

        <!-- Price -->
        <div class="form-group mb-3">
            <label asp-for="Price" class="form-label text-gray-700"></label>
            <input asp-for="Price" class="form-control border border-gray-300 focus:border-[#10b981] focus:ring focus:ring-[#10b981] placeholder-gray-400" placeholder="Enter price" type="number" step="0.01" required />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <!-- Stock Quantity -->
        <div class="form-group mb-3">
            <label asp-for="stockQuantity" class="form-label text-gray-700"></label>
            <input asp-for="stockQuantity" class="form-control border border-gray-300 focus:border-[#10b981] focus:ring focus:ring-[#10b981] placeholder-gray-400" placeholder="Enter stock quantity" type="number" required />
            <span asp-validation-for="stockQuantity" class="text-danger"></span>
        </div>

        <!-- Category Selection -->
        <div class="form-group mb-3">
            <label asp-for="CategoryId" class="form-label text-gray-700">Select Category</label>
            <select asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories, "CategoryId", "Name"))" class="form-select border border-gray-300 focus:border-[#10b981] focus:ring focus:ring-[#10b981]" required>
                <option value="">Select a category</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <!-- Supplier Selection (Optional) -->
        <div class="form-group mb-3">
            <label asp-for="SupplierId" class="form-label text-gray-700">Select Supplier (Optional)</label>
            <select asp-for="SupplierId" class="form-select border border-gray-300 focus:border-[#10b981] focus:ring focus:ring-[#10b981]">
                <option value="">Select a supplier</option>
                @foreach (var supplier in ViewBag.Suppliers)
                {
                    <option value="@supplier.Id">@supplier.Name</option>
                }
            </select>
            <span asp-validation-for="SupplierId" class="text-danger"></span>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn" style="background-color: #10b981; color: white; border: none; padding: 10px 15px; border-radius: 4px; cursor: pointer;">Add Product</button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
