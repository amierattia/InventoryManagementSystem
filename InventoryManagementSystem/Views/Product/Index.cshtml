@model IEnumerable<Product>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">All Products</h1>

    <div class="d-flex justify-content-end mb-4">
        <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create New Product
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="thead-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(p => p.ProductName)</th>
                        <th>@Html.DisplayNameFor(p => p.Price)</th>
                        <th>@Html.DisplayNameFor(p => p.ProductDescription)</th>
                        <th>Supplier Name</th>
                        <th>Category Name</th> 
                        <th class="text-center">Update</th>
                        <th class="text-center">Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.ProductName</td>
                            <td>@product.Price</td>
                            <td>@product.ProductDescription</td>
                            <td>@product.Supplier?.Name</td>
                            <td>@product.Category?.Name</td> 
                            <td class="text-center">
                                <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.ProductId" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                            </td>
                            <td class="text-center">
                                <a asp-controller="Product" asp-action="ConfirmDelete" asp-route-id="@product.ProductId" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center mt-5">
            <h3>There are no products available.</h3>
        </div>
    }
</div>
