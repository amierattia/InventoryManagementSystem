@model InventoryManagementSystem.EntitiesLayer.Models.Product

@{
    ViewBag.Title = "Edit Product";
    Layout = "_InventoryLayout";
}

<h2 class="text-gray-800">Edit Product</h2>

<form asp-action="Edit" method="post" class="edit-product-form">
    @Html.HiddenFor(model => model.ProductId)

    <!-- Product Name -->
    <div class="form-group">
        <label asp-for="ProductName" class="form-label">Product Name</label>
        <input asp-for="ProductName" class="form-control" placeholder="Enter product name" required />
        <span asp-validation-for="ProductName" class="error-message"></span>
    </div>

    <!-- Product Description -->
    <div class="form-group">
        <label asp-for="ProductDescription" class="form-label">Product Description</label>
        <textarea asp-for="ProductDescription" class="form-control" placeholder="Enter product description"></textarea>
        <span asp-validation-for="ProductDescription" class="error-message"></span>
    </div>

    <!-- Price -->
    <div class="form-group">
        <label asp-for="Price" class="form-label">Price</label>
        <input asp-for="Price" class="form-control" placeholder="Enter price" type="number" step="0.01" required />
        <span asp-validation-for="Price" class="error-message"></span>
    </div>

    <!-- Stock Quantity -->
    <div class="form-group">
        <label asp-for="stockQuantity" class="form-label">Stock Quantity</label>
        <input asp-for="stockQuantity" class="form-control" placeholder="Enter stock quantity" type="number" required />
        <span asp-validation-for="stockQuantity" class="error-message"></span>
    </div>

    <!-- Category Selection -->
    <div class="form-group">
        <label asp-for="CategoryId" class="form-label">Select Category</label>
        <select asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories, "CategoryId", "Name", Model.CategoryId))" required class="form-control">
            <option value="">Select a category</option>
        </select>
        <span asp-validation-for="CategoryId" class="error-message"></span>
    </div>

    <!-- Supplier Selection (Optional) -->
    <div class="form-group">
        <label asp-for="SupplierId" class="form-label">Select Supplier (Optional)</label>
        <select asp-for="SupplierId" class="form-control">
            <option value="">Select a supplier</option>
            @foreach (var supplier in ViewBag.Suppliers)
            {
                <option value="@supplier.Id" selected="@(supplier.Id == Model.SupplierId ? "selected" : "")">@supplier.Name</option>
            }
        </select>
        <span asp-validation-for="SupplierId" class="error-message"></span>
    </div>

    <!-- Submit Button -->
    <button type="submit" class="btn-submit">Update Product</button>
</form>

<style>
    .edit-product-form {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 16px;
    }

    .form-label {
        display: block;
        font-weight: 600;
        margin-bottom: 8px;
        color: #333;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #d1d5db;
        border-radius: 4px;
        font-size: 16px;
        outline: none;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

    .form-control:focus {
        border-color: #10b981;
        box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.25);
    }

    .error-message {
        color: #dc2626;
        font-size: 14px;
    }

    .btn-submit {
        background-color: #10b981;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        width: 100%;
        font-size: 16px;
        transition: background-color 0.3s ease;
    }

    .btn-submit:hover {
        background-color: #059669;
    }

    /* Responsive styles */
    @@media (max-width: 768px) {
        .edit-product-form {
            padding: 15px;
        }

        .btn-submit {
            font-size: 14px;
        }

        .form-label, .form-control {
            font-size: 14px;
        }
    }
</style>
