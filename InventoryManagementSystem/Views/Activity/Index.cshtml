@model IEnumerable<InventoryManagementSystem.EntitiesLayer.Models.ActivityModel>

@{
    ViewData["Title"] = "Activities";
}

<h1>Activities</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Description</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var activity in Model)
        {
            <tr>
                <td>@activity.Id</td>
                <td>@activity.Description</td>
                <td>@activity.Date.ToString("g")</td>
            </tr>
        }
    </tbody>
</table>
