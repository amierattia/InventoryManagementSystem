@model InventoryManagementSystem.BLL.sln.Dto.DashboardDto
@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventory Management - Dashboard</title>
    <link rel="stylesheet" href="~/css/Dash.css">
</head>
<body>
    <div class="dashboard-container">
        <div class="sidebar">
            <h2>Inventory System</h2>
            <ul>
                <li><a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
                <li><a href="@Url.Action("Index", "Inventory")">View Inventory</a></li>
                <li><a href="@Url.Action("Create", "Inventory")">Add Item</a></li>
                <li><a href="@Url.Action("Index", "User")">Manage Users</a></li>
                <li><a href="#">Reports</a></li>
                <li><a href="#">Settings</a></li>
                <li><a href="/Account/Login">Logout</a></li>
            </ul>
        </div>
        <div class="main-content">
            <header>
                <h1>Welcome to Your Dashboard</h1>
                <p>Manage your inventory efficiently.</p>
            </header>
            <section class="stats">
                <div class="stat-card">
                    <h3>Total Items</h3>
                    <p>@Model.TotalItems</p>
                </div>
                <div class="stat-card">
                    <h3>Low Stock Items</h3>
                    <p>@Model.LowStockItems</p>
                </div>
                <div class="stat-card">
                    <h3>Users</h3>
                    <p>@Model.UsersCount</p>
                </div>
                <div class="stat-card">
                    <h3>Pending Orders</h3>
                    <p>@Model.PendingOrders</p>
                </div>
            </section>
            <section class="recent-activity">
                <h2>Recent Activity</h2>
                <table>
                    <thead>
                        <tr>
                            <th>Activity</th>
                            <th>Date & Time</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var activity in Model.RecentActivities)
                        {
                            <tr>
                                <td>@activity.Description</td>
                                <td>@activity.Date.ToString("yyyy-MM-dd HH:mm tt")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </section>
        </div>
    </div>
</body>
</html>
